<p id="notice"><%= notice %></p>

  <div class="col-md-9">
<h1>Students</h1>


    <% @students.each do |student| %>
      <div class="row">
        <div class="well">

        <%= student.name %>
        <%= student.age %>
        <%= link_to 'Show', student, class:'btn btn-primary' %>
        <%= link_to 'Edit', edit_student_path(student), class:'btn btn-secondary' %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-warning' %>
      </div>
      </div>
    <% end %>



</div>

<%= link_to 'New Student', new_student_path %>
